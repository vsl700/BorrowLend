@{
    ViewData["Title"] = ":D";
}


@model IEnumerable<BorrowLend.Models.ExpenseType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Expense type list
            </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary w-75" asp-controller="ExpenseType" asp-action="Create">Create new expense</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <th> Expense Type </th>
            <th> Changes </th>
            </thead>
            <tbody>
                @foreach (ExpenseType expense in Model)
                {
                <tr>
                    <td width="50%">@expense.ExpenseTypeName</td>
                    <td width="50%">
                        <a class="btn btn-success m-1" asp-controller="ExpenseType" asp-action="Update" asp-route-id="@expense.ID">Update</a>
                        <a class="btn btn-danger m-1" asp-controller="ExpenseType" asp-action="Delete" asp-route-id="@expense.ID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>