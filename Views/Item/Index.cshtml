@{
    ViewData["Title"] = ":D";
}


@model IEnumerable<BorrowLend.Models.Item>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Borrowed items list
            </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary w-75" asp-controller="Item" asp-action="Create">Create new item</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Item name </th>
                    <th> Borrower </th>
                    <th> Email </th>
                    <th> Lender </th>
                    <th> :))) </th>
                    <th> Changes </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Item item in Model)
                {
                <tr>
                    <td width="17%">@item.ItemName</td>
                    <td width="17%">@item.Borrower</td>
                    <td width="17%">@item.Email </td>
                    <td width="17%">@item.Lender</td>
                    <td width="17%">:)</td>
                    <td width="17%">
                        <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id="@item.ID">Update</a>
                        <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>