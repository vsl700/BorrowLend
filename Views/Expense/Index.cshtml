@{
    ViewData["Title"] = ":D";
}


@model IEnumerable<BorrowLend.Models.Expense>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                My expense list
            </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary w-75" asp-controller="Expense" asp-action="Create">Create new expense</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Expense name </th>
                    <th> Amount </th>
                    <th> Expense Type </th>
                    <th> Changes </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Expense expense in Model)
                {
                <tr>
                    <td width="25%">@expense.ExpenseName</td>
                    <td width="25%">@expense.Amount</td>
                    <td width="25%">@expense.ExpenseType.ExpenseTypeName</td>
                    <td width="25%">
                        <a class="btn btn-success m-1" asp-controller="Expense" asp-action="Update" asp-route-id="@expense.ID">Update</a>
                        <a class="btn btn-danger m-1" asp-controller="Expense" asp-action="Delete" asp-route-id="@expense.ID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>